<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:columnOrderPreserved="false"
    android:orientation="horizontal"
    android:paddingLeft="-10dp"
    android:paddingTop="10dp" >
    <com.beztooth.UI.Util.BezButton
        android:id="@+id/sync_clock_action"
        android:background="@drawable/select_border_medium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/BezBlue"
        android:visibility="gone"
        android:text="@string/sync_time" />
    <LinearLayout
        android:id="@+id/datetime_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:gravity="start"
        android:visibility="gone">
        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="18sp" />
    </LinearLayout>
    <com.beztooth.UI.Util.BezButton
        android:id="@+id/set_alarm_action"
        android:background="@drawable/select_border_medium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/BezBlue"
        android:visibility="gone"
        android:text="@string/set_alarm" />
    <TextView
        android:id="@+id/alarm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:visibility="gone" />
    <com.beztooth.UI.Util.BezButton
        android:id="@+id/interval_timer_action"
        android:background="@drawable/select_border_medium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/BezBlue"
        android:visibility="gone"
        android:text="Timer" />
    <TextView
        android:id="@+id/interval_timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/beeps_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="@string/beeps"
        android:visibility="gone" />
    <SeekBar
        android:id="@+id/beeps_slider"
        style="@style/BezSeekBar"
        android:thumb="@drawable/seekbar_thumb"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/brightness_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="@string/brightness"
        android:visibility="gone" />
    <SeekBar
        android:id="@+id/brightness_slider"
        style="@style/BezSeekBar"
        android:thumb="@drawable/seekbar_thumb"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone" />
</GridLayout>
